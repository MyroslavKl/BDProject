@model List<KillingViewModel>

<!DOCTYPE html>
<html>
<head>
    <title>Killings</title>
</head>
<body>

    <h2>Killings</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Killing Id</th>
                <th>Killing Date</th>
                <th>Alien Name</th>
                <th>Alien Birth Date</th>
                <th>Human Name</th>
                <th>Human Birth Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.KillingId</td>
                    <td>@item.KillingDate.ToShortDateString()</td>
                    <td>@item.AlienName</td>
                    <td>@(item.AlienBirthDate.HasValue ? item.AlienBirthDate.Value.ToShortDateString() : "-")</td>
                    <td>@item.HumanName</td>
                    <td>@(item.HumanBirthDate.HasValue ? item.HumanBirthDate.Value.ToShortDateString() : "-")</td>
                </tr>
            }
        </tbody>
    </table>
    @if (User.Identity.IsAuthenticated)
    {
        <ul>
            <li><a asp-action="FindAlien">Find Killed Alien</a></li>
        </ul>
    }
</body>
</html>
