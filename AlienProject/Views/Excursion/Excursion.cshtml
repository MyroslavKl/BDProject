@model List<ExcursionViewModel>

<!DOCTYPE html>
<html>
<head>
    <title>Excursion</title>
</head>
<body>

    <h2>Excursions</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Excursion Date</th>
                <th>Alien Name</th>
                <th>Alien Birth Date</th>
                <th>Human Name</th>
                <th>Human Birth Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ExcursionDate.ToShortDateString()</td>
                    <td>@item.AlienName</td>
                    <td>@(item.AlienBirthDate.HasValue ? item.AlienBirthDate.Value.ToShortDateString() : "-")</td>
                    <td>@item.HumanName</td>
                    <td>@(item.HumanBirthDate.HasValue ? item.HumanBirthDate.Value.ToShortDateString() : "-")</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
<ul><li><a asp-action="FindExcursionsForAlien">Find Excursions For Aliens</a></li></ul>
