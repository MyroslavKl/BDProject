@model IEnumerable<AlienProject.Models.Alien>

@{
    ViewData["Title"] = "Aliens";
}

<h1>Aliens</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>@item.Name</td>
                <td>@(item.BirthDate.HasValue ? item.BirthDate.Value.ToShortDateString() : "-")</td>
                <td>@item.Email</td>
            </tr>
}
    </tbody>
</table>
